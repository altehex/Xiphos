void
big_merge_regions(MemRegion * targetReg,
	  PTR         buf,
	  MemRegion * nextNearbyReg)
{
	
	if ((nextNearbyReg != sentinelRegion) &&
		(nextNearbyReg == buf + targetReg->sz))
	{
		nextNearbyReg->next->prev = targetReg;
		nextNearbyReg->prev->next = targetReg;
		
		targetReg->sz   += nextNearbyReg->sz + sizeof(MemRegion);
		targetReg->next =  nextNearbyReg->next;
	}
	else {
		nextNearbyReg->prev = targetReg;
		targetReg->next = nextNearbyReg;
	}
}
